<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/voicechat_light_blue"/>   <!-- 边框颜色 -->
            <corners android:radius="11dp"/> <!-- 圆角半径，如果需要圆角 -->
        </shape>
    </item>
    <!-- 正常状态 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/voicechat_light_white"/>   <!-- 边框颜色 -->
            <corners android:radius="11dp"/> <!-- 圆角半径，如果需要圆角 -->
        </shape>
    </item>
</selector>

